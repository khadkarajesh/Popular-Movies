<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PopularMovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MovieActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:launchMode="singleInstance"></activity>
        <activity
            android:name=".activities.TestActivity"
            android:label="@string/title_activity_test_activities"></activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_title" />

        <provider
            android:name=".data.MovieDbProvider"
            android:authorities="@string/content_authority"
            android:exported="true"
            android:syncable="true" />
    </application>

</manifest>
